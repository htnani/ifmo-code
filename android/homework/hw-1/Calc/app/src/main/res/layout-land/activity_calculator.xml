<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/grid"
        android:layout_alignParentTop="true"
        android:gravity="bottom|end"
        android:scrollbars = "vertical"
        android:textSize="48sp"
        android:layout_alignEnd="@+id/grid"
        android:layout_alignStart="@+id/grid" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/d1"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/num_1"/>

        <Button
            android:id="@+id/d2"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/num_2"/>

        <Button
            android:id="@+id/d3"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/num_3"/>

        <Button
            android:id="@+id/d4"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/num_4"/>

        <Button
            android:id="@+id/d5"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/num_5"/>

        <Button
            android:id="@+id/d6"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/num_6"/>

        <Button
            android:id="@+id/d7"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/num_7"/>

        <Button
            android:id="@+id/d8"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/num_8"/>

        <Button
            android:id="@+id/d9"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/num_9"/>

        <Button
            android:id="@+id/d0"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/num_0"/>

        <Button
            android:id="@+id/div"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/action_div"/>

        <Button
            android:id="@+id/mul"
            android:layout_row="1"
            android:layout_column="3"
            android:text="@string/action_mul"/>

        <Button
            android:id="@+id/sub"
            android:layout_row="2"
            android:layout_column="3"
            android:text="@string/action_sub"/>

        <Button
            android:id="@+id/add"
            android:layout_row="3"
            android:layout_column="3"
            android:text="@string/action_add"/>

        <Button
            android:id="@+id/eqv"
            android:layout_row="3"
            android:layout_column="4"
            android:text="@string/action_eqv"/>

        <Button
            android:id="@+id/clear"
            android:layout_row="0"
            android:layout_column="4"
            android:text="@string/action_clear"/>
    </GridLayout>

</RelativeLayout>